<?xml version="1.0"?>
<config>
    <modules>
        <Etheme_Evoqueflex>
            <version>0.1.0</version>
        </Etheme_Evoqueflex>
    </modules>
    <frontend>
        <layout>
            <updates>
                <evoqueflex>
                    <file>evoqueflex.xml</file>
                </evoqueflex>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <evoqueflex>
                <use>admin</use>
                <args>
                    <module>Etheme_Evoqueflex</module>
                    <frontName>evoqueflex</frontName>
                </args>
            </evoqueflex>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <evoque>
                <children>
                    <flex>
                        <title>Flex slider (home)</title>
                        <sort_order>10</sort_order>
                        <children>
                            <upload>
                                <title>Manage slides</title>
                                <sort_order>1</sort_order>
                                <action>evoqueflex/adminhtml_evoqueflex</action>
                            </upload>
                            <settings>
                                <title>Settings</title>
                                <sort_order>2</sort_order>
                                <action>adminhtml/system_config/edit/section/evoqueflex</action>
                            </settings>
                        </children>
                    </flex>
                </children>
            </evoque>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <evoqueflex>
                                            <title>Evoque - Flexslider</title>
                                        </evoqueflex>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <etheme>
                            <title>eTheme - Evoque</title>
                            <children>
                                <slider>
                                    <title>Slider Configuration</title>
                                    <children>
                                        <flex>
                                            <title>Flex slider</title>
                                            <children>
                                                <settings>
                                                    <title>Settings</title>
                                                </settings>
                                                <upload>
                                                    <title>Upload slides</title>
                                                </upload>
                                            </children>
                                        </flex>
                                    </children>
                                </slider>
                            </children>
                        </etheme>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <models>
            <evoqueflex>
                <class>Etheme_Evoqueflex_Model</class>
                <resourceModel>evoqueflex_mysql4</resourceModel>
            </evoqueflex>
            <evoqueflex_mysql4>
                <class>Etheme_Evoqueflex_Model_Mysql4</class>
                <entities>
                    <evoqueflex>
                        <table>evoqueflex</table>
                    </evoqueflex>
                    <evoqueflex_store>
                        <table>evoqueflex_store</table>
                    </evoqueflex_store>
                </entities>
            </evoqueflex_mysql4>
        </models>
        <resources>
            <evoqueflex_setup>
                <setup>
                    <module>Etheme_Evoqueflex</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </evoqueflex_setup>
            <evoqueflex_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </evoqueflex_write>
            <evoqueflex_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </evoqueflex_read>
        </resources>
        <blocks>
            <evoqueflex>
                <class>etheme_evoqueflex_Block</class>
            </evoqueflex>
        </blocks>
        <helpers>
            <evoqueflex>
                <class>etheme_evoqueflex_Helper</class>
            </evoqueflex>
        </helpers>
    </global>
    <default>
        <evoqueflex>
            <options>
                <animation>slide</animation>
                <slideshowspeed>7000</slideshowspeed>
                <animationspeed>600</animationspeed>
            </options>
        </evoqueflex>
    </default>
</config>