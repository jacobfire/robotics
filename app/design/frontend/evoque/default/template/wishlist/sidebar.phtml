/* @var $this Mage_Wishlist_Block_Customer_Sidebar */
?>

<?php if ($this->helper('wishlist')->isAllow()) : ?>
<div class="block block-wishlist">
    <h4 class="font2"><?php echo $this->getTitle(); ?></h4>
    <div class="compared_products">
        <h6><?php echo $this->__('Last Added Items') ?></h6>
        <?php if ($this->hasWishlistItems()): ?>

            <?php foreach ($this->getWishlistItems() as $_item): ?>
            <?php $product = $_item->getProduct(); ?>
            <div class="custom_product">
                <div class="image">
                    <a class="delete" href="<?php echo $this->getItemRemoveUrl($_item) ?>" title="<?php echo $this->__('Remove This Item') ?>"><i class="typcn typcn typcn-delete typcn-sm"></i></a>
                    <a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->escapeHtml($product->getName()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($product, 'small_image')->resize(60) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" class="img-responsive"/></a>
                </div>
                <div class="text"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->escapeHtml($product->getName()) ?></a>
                </div>
            </div>
            <?php endforeach; ?>



            <a class="btn btn-default" href="<?php echo $this->helper('wishlist')->getListUrl() ?>"><i class="typcn typcn-heart-outline"></i><?php echo $this->__('Go to Wishlist') ?></a>

        <?php else: ?>
        <p class="empty"><?php echo $this->__('You have no items in your wishlist.') ?></p>
        <?php endif ?>
    </div>
</div>
<?php endif ?>