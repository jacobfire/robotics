<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<div class="crosssell">
    <h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>

    <div class="block-content">


        <?php foreach ($this->getItems() as $_item): ?>

        <div class="product_small">
            <div class="inside_bg">
                <div class="hover_icon"><i class="typcn typcn-camera"></i></div>
                <div class="inside">
                    <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(270) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" class="img-responsive"/></a>

                    <div class="text_wrapper">
                        <?php echo $this->getPriceHtml($_item, true, '-upsell') ?>
                        <a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a>
                    </div>
                </div>
            </div>
        </div>

        <?php endforeach; ?>

    </div>


</div>
<?php endif; ?>
