 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $video=$_product->getVideobox();
    $video2=$_product->getVideoboxself();
    ?>

<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>


<?php if (count($this->getGalleryImages()) > 0): ?>
<ul id="zoom-gallery-outer">

    <?php foreach ($this->getGalleryImages() as $_image): ?>
    <li>
        <a  href="#" class="elevatezoom-gallery active" data-update="" data-image="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>"
             data-zoom-image="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>"> <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'small_image', $_image->getFile())->resize(105); ?>" alt="" /></a>
    </li>
    <?php endforeach; ?>

    <?php if(!empty($video)):?>
    <li><a  class="fancybox-media" href="<?php echo $_helper->productAttribute($this->getProduct(), $video, 'videobox') ?>"><i class="typcn typcn-media-play"></i></a></li>
    <?php endif; ?>

    <?php if(!empty($video2)):?>
    <li><a  class="fancybox-media" href="<?php echo $_helper->productAttribute($this->getProduct(), $video, 'videoboxself') ?>"><i class="typcn typcn-media-play"></i></a></li>
    <?php endif; ?>



</ul>




<?php endif; ?>
<?php
    $_img = '<div id="zoom-big-image"><img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image').'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" data-zoom-image="'.$this->helper('catalog/image')->init($_product, 'image').'"/></div>';
    echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
<?php endif; ?>