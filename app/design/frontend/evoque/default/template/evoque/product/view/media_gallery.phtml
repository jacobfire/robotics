?>
<?php

    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $video=$_product->getVideobox();
    $video2=$_product->getVideoboxself();


?>
<?php if (count($this->getGalleryImages()) > 0): ?>
    <h4 class="font2"><?php echo $this->__('Gallery') ?></h4>
    <div id="GalleryThumb">
        <?php foreach ($this->getGalleryImages() as $_image): ?>

                <div class="product_gallery"><a href="#"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'small_image', $_image->getFile())->resize(270); ?>"  data-zoom-image="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>" class="zoom img-responsive" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>"></a></div>

        <?php endforeach; ?>

        <?php if(!empty($video)):?>
        <div class="product_video"><a  class="fancybox-media" href="<?php echo $_helper->productAttribute($this->getProduct(), $video, 'videobox') ?>"><i class="typcn typcn-media-play"></i></a></div>
        <?php endif; ?>

        <?php if(!empty($video2)):?>
        <div class="product_video"><a  class="fancybox-media" href="<?php echo $_helper->productAttribute($this->getProduct(), $video2, 'videoboxself') ?>"><i class="typcn typcn-media-play"></i></a></div>
        <?php endif; ?>


    </div>
<?php endif; ?>