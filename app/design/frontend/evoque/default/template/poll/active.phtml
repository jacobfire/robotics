<?php if(isset($poll)) : ?>
<script type="text/javascript">
    //<![CDATA[
    function validatePollAnswerIsSelected()
    {
        var options = $$('input.poll_vote');
        for( i in options ) {
            if( options[i].checked == true ) {
                return true;
            }
        }
        return false;
    }
    //]]>
</script>

<div class="block block-poll">
    <div class="block-title">
        <strong><span><?php echo $this->__('Community Poll') ?></span></strong>
    </div>
    <form id="pollForm" action="<?php echo $action ?>" method="post" onsubmit="return validatePollAnswerIsSelected();">
        <div class="block-content">
            <p class="block-subtitle"><b><?php echo $this->escapeHtml($poll->getPollTitle()); ?></b></p>
            <?php if( $poll_answers ): ?>
            <div id="poll-answers">
            <?php foreach( $poll_answers as $answer ): ?>
                <div class="radio">
                    <input type="radio" name="vote" class="poll_vote" value="<?php echo $answer->getAnswerId() ?>" id="vote_<?php echo $answer->getId() ?>">
                    <label for="vote_<?php echo $answer->getId() ?>"> <?php echo $this->escapeHtml($answer->getAnswerTitle()) ?> </label>
                </div>
                <?php endforeach; ?>
            </div>

            <script type="text/javascript">decorateList('poll-answers');</script>
            <?php endif; ?>
            <div class="actions">
                <button class="btn btn-default left" type="submit" title="<?php echo $this->__('Vote') ?>" ><i class="typcn typcn-thumbs-up"></i><span><span><?php echo $this->__('Vote') ?></span></span></button>
            </div>
        </div>
    </form>
</div>
<?php endif; ?>

