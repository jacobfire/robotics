<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="block block-upsells">
    <div class="block-title">
        <strong><span><?php echo $this->__('Upsell products') ?></span></strong>
    </div>


    <?php $this->resetItemsIterator() ?>
    <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
        <?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
            <?php if($_link=$this->getIterableItem()): ?>
                <div class="product_small">
                    <div class="inside_bg">
                        <div class="hover_icon"><i class="typcn typcn-camera"></i></div>
                        <div class="inside">
                            <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'thumbnail')->resize(270) ?>" alt="<?php echo $this->escapeHtml($_link->getName()) ?>" class="img-responsive"/></a>

                            <div class="text_wrapper">
                                <?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
                                <a href="<?php echo $_link->getProductUrl() ?>"><?php echo $this->escapeHtml($_link->getName()) ?></a>
                            </div>
                        </div>
                    </div>
                </div>
            <?php else: ?>
            <?php endif; ?>
        <?php endfor; ?>
    <?php endfor; ?>

</div>
<?php endif ?>
