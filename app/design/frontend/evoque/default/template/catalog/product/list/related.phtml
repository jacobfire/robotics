<?php if($this->getItems()->getSize()): ?>
<div class="block block-related">
    <div class="block-title">
        <strong><span><?php echo $this->__('Related Products') ?></span></strong>
    </div>


        <?php foreach($this->getItems() as $_item): ?>

            <div class="product_small">
                <div class="inside_bg">
                    <div class="hover_icon"><i class="typcn typcn-camera"></i></div>
                    <div class="inside">
                        <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(270) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" class="img-responsive"/></a>

                        <div class="text_wrapper">
                            <?php echo $this->getPriceHtml($_item, true, '-related') ?>
                            <a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a>
                        </div>
                    </div>
                </div>
            </div>



        <?php endforeach ?>




</div>
<?php endif ?>
